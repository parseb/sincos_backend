
<div id="new" class="tab-pane fade-in <%=@nosession%>">
  <div class="container">
    <div class="row">
      <h1><%= $currentu.name %></h1>
    </div>
  </div>
  <div class="container">
<div class="row">
  <div class="col-6-md">
    <h4>Create Session</h4>
    <%= simple_form_for @session, :url => sessions_path, :method => :post, :action => :create  do |f| %>
      <div class="form-group">
        <%= f.error_notification :input_html => { class: 'alert-danger'}%>
        <%= f.input :name, label: 'Subject', error: 'Please provide a Title', input_html:{class:'form-control'} %><br>
        <% ##concat datetime or use default %>
        <%= f.input :time, label: 'When?', :as => :date, :input_html => {class: 'form-control'}, error: 'Please provide a date' %><br>
        <%= f.input :details, label: 'Details (example: Quaterly Shareholder Meeting)', input_html:{class:'form-control'} %><br>
        <%= f.input :invite, as: :check_boxes, collection: @utags, label_method: :second, value_method: :first, label: 'Invite:', input_html:{class:'form-control', multiple: true, id: 'session_tags_as_strings'} %><br>
      </div>
      <%= f.button :submit, 'Create Session', input_html:{ class:'btn btn-success'} %>
    <% end %>
  </div>

  <div class="col-6-md">
    <h4>Join Session</h4>

      <h5>Scan QR Code:</h5>
      <p>
        xxxxxxxxxxxxxx <br>
        xxxxxxxxxxxxxx <br>
        xxxxxxxxxxxxxx <br>
        xxxxxxxxxxxxxx <br>
        xxxxxxxxxxxxxx <br>
      </p>


      <div class="form form-group">
        <%= simple_form_for @joins, url: joins_path, :method => :post do |f| %>
        <%= f.input :code, label: 'Invitation Code:', :input_html =>{class: 'form-control'}, error:'Invalid or No Code provided' %>
        <%= f.button :submit,"Join", input_html: { class:'btn btn-success'} %>
        <% end %>
      </div>


  </div>

</div>
</div>
</div>
